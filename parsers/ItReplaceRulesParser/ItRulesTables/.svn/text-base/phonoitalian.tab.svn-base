// Phoneme to phoneme translations for Italian
// used after the letter to sound rules.
set vow = ["a", "A", "c", "o", "e", "E", "w", "u"];
set stop = ["k", "p", "t", "g", "b", "d"];
set uvfric = ["f", "s", "7" , "S"];
set usound = ["w", "u"];
set BOUND = ["#", " "];    // special boundary operator: use as LBOUND
set sono=["R", "r", "l","m","n","v"];
set fric=["f", "s", "S"];
set uplos=["t","p", "k"];
set vplos=["d","b", "g"];
set affric=["7","0"];
set cons=[sono, fric, uplos, vplos, affric];
set stress =["'", "`"];


// Geminates:

"bb" > "Bb" ;
"dd" > "Dd" ;
"gg" > "Gg" ;
"tt" > "Tt" ;
"99" > "T9" ;
"77" > "T7" ;
"H-'H"  > "n-'H";
"HH" > "nH" ;
"0-'0" > "D-'0"; 
"00" > "D0" ; 
"z-'z" > "D-'z"; 
"zz" > "Dz" ;


"LL" > "Lj" ;
"L" > "j" / "L-" _ vow;
"L" > "j" / "L-" + stress _ vow;

"b" > "B" / . _ stop | uvfric ;
"d" > "D" / . _ stop | uvfric ;
"g" > "G" / . _ stop | uvfric ;
"t" > "T" / . _ stop | uvfric ;
"k" > "K" / . _ stop | uvfric ;
"p" > "P" / . _ stop | uvfric ;
"A" > "a";
"E" > "E";
"c" > "c";
"O" > "c";
"U" > "u";
"I" > "i";
"W" > "w";   // needed for a trick with not 
// "j" > "i";     // to fix a screwup for now
"e" > "E" / BOUND _ sono + "-" + "'" + cons;
"e" > "E" / "'" + cons _ sono ;
"e" > "E" / "'" + cons _ "-" + cons ;
"e" > "E" / "'" + cons + "i" _ "-" + cons;
"o" > "c" / "'" + cons + usound _ "-" + cons;